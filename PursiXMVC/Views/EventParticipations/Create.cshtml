@model PursiXMVC.Data.EventParticipations

@{
    ViewData["Title"] = "Ilmoittautuminen";
}

<h1>Create</h1>

<h4>EventParticipations</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoginId" class="control-label"></label>
                <select asp-for="LoginId" class ="form-control" asp-items="ViewBag.LoginId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Confirmed" class="control-label"></label>
                <input asp-for="Confirmed" class="form-control" />
                <span asp-validation-for="Confirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddInfo" class="control-label"></label>
                <input asp-for="AddInfo" class="form-control" />
                <span asp-validation-for="AddInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-arrow-left"></i> Takaisin listaukseen</a>
</div>

